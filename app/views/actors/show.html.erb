<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @the_actor.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="http://robohash.org/<%= @the_actor.image %>"style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
       <%= time_ago_in_words(@the_actor.created_at) %> ago  
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<hr>
<h2>Filmography</h2>

<% @characters.each do |character| %>
<table border="1">
  <tr>
    <th>
      Title
    </th>
    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

    <tr>
      <td>
      <% movie = Movie.where({:id => character.movie_id}).at(0) %>
      <%= movie.title%>
      </td>

      <td>
      <%= movie.year%>

      </td>

      <td>
      <% director = Director.where({ :id => movie.director_id }).at(0)%>
      <%= director.name%>
      </td>
      <td>
      <%= character.name%>
      </td>

      <td>
        <a href="/movies/<%= movie.id%>">
          Show details
        </a>
      </td>
    </tr>
    <%end%>
</table>
