<h1>
  List of all movies
</h1>

<hr>

<table border="1">
  <% @movies.each do |movie| %>
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <tr>
    <td>
      <%= movie.id%>
    </td>

   <td>
      <img src="http://robohash.org/<%= movie.image %>">
    </td>

    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <% director = Director.where( id: movie.director_id ).first %>
      <%= director.name %>
    </td>

    <td> <a href="/movies/<%=movie.id%>">Show details</a>
    </td>
  </tr>

  <% end %>
</table>
